<h2></h2>

<!-- Log In Page  -->
<div class="container">
  <div class="row">
    <div class="col-lg-4 col-lg-offset-4">
      <!-- Form horizontal begins here -->
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
        <!-- Logo  -->
          <div class="form-group">
            <%= image_tag 'keyword.svg', width: "30%", class: "animated zoomIn main-logo" %>
          </div>
          <!-- E-mail  -->
          <div class="form-group">
            <%= f.label :email, class: "col-sm-2 control-label" %>
          </div>
          <div class="form-group">
            <div class="col-sm-12">
              <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: 'user@example.com' %>
            </div>
            <!-- Password  -->
          </div>
          <div class="form-group">
            <%= f.label :password, class: "col-sm-2 control-label" %>
          </div>
            <div class="form-group">
            <div class="col-sm-12">
              <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: 'password'%>
            </div>
          </div>
          <!-- Log in button  -->
          <div class="form-group">
            <div class="col-sm-12">
              <%= f.submit "Log in", class: "btn btn-tod-splash btn-lg btn-block" %>
            </div>
          </div>
        <% end %>
      </form>
      <!-- Forgot Password -->
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
